<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>ServletCookie</servlet-name>
        <servlet-class>som.ServletCookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCookie</servlet-name>
        <url-pattern>/cookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletSession</servlet-name>
        <servlet-class>som.ServletSession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletSession</servlet-name>
        <url-pattern>/session</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ServletCookieShop</servlet-name>
        <servlet-class>som.ServletCookieShop</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCookieShop</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ServletCookieDelete</servlet-name>
        <servlet-class>som.ServletCookieDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCookieDelete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    
    <welcome-file-list>
        <welcome-file>cookieShop.jsp</welcome-file>
    </welcome-file-list>
</web-app>