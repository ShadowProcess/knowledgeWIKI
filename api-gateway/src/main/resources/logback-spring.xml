<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <property name="LOG_PATH" value="${LOG_PATH}"/>  <!--指向的是application.properties文件中的logging.path-->
    <contextName>gateway_service</contextName>
    <!-- %m输出的信息,%p日志级别,%t线程名,%d日期,%c类的全名,,,, -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %p %t (%file:%line\)- %m%n</pattern>
            <charset>utf-8</charset>
        </encoder>
    </appender>

    <!-- %m输出的信息,%p日志级别,%t线程名,%d日期,%c类的全名,,,, -->
    <appender name="LINKS" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d</pattern>

            <charset>utf-8</charset>
        </encoder>
    </appender>
    <appender name="asialog"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_PATH}/gateway_service.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>log/gateway_service-%d{yyyy-MM-dd}.%i.txt.log</fileNamePattern>
            <!-- or whenever the file size reaches 20 MB  keep 7days -->
            <maxFileSize>20 MB</maxFileSize>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                %d %p %t (%file:%line\)- %m%n
            </pattern>
            <charset>UTF-8</charset> <!-- 此处设置字符集 -->
        </encoder>
    </appender>
    <appender name="asiaerrorlog"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_PATH}/gateway_service_error.log</File>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/gateway_service_error-%d{yyyy-MM-dd}.%i.txt.log</fileNamePattern>
            <!-- or whenever the file size reaches 10 MB  keep 7days -->
            <maxFileSize>10 MB</maxFileSize>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                %d %p %t (%file:%line\)- %m%n
            </pattern>
            <charset>UTF-8</charset> <!-- 此处设置字符集 -->
        </encoder>
    </appender>

    <!--     配置job日志输出至单独的日志文件中 -->
    <appender name="linkLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_PATH}/gate_service.%d{yyyy-MM-dd}.link</FileNamePattern>
            <MaxHistory>7</MaxHistory>
        </rollingPolicy>
        <encoder
                class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <!-- 日志输出编码 -->
            <layout class="ch.qos.logback.classic.PatternLayout">
                <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
                <pattern>%m%n</pattern>
            </layout>
        </encoder>
        <!--日志文件最大的大小-->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <!--需要将日志单独输出的包路径-->
    <logger name="com.asia.gate.log.ResponseLinkUtil" additivity="false" level="INFO">
        <appender-ref ref="linkLog"/>
    </logger>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="asiaerrorlog"/>
    </root>
    <logger name="com.example" level="INFO">
        <appender-ref ref="asialog"/>
    </logger>
</configuration>

